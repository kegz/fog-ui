{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noEmit": false,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"stripInternal": true
	},
	"include": [
		"src/index.ts",
		"src/theme/**/*"
	],
	"exclude": [
		"**/__tests__/**",
		"**/*.test.*",
		"**/*.spec.*",
		"**/*.stories.*",
		"dist",
		"node_modules"
	]
}